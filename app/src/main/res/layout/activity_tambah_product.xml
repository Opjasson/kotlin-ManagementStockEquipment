<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TambahProductActivity">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- KONTEN UTAMA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Tambah Product" />

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/nameItemFormTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/full_corners_full_stroke_bg"
                            android:ems="10"
                            android:hint="Nama Product"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/black_medium"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/hargaItemFormTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/full_corners_full_stroke_bg"
                            android:ems="10"
                            android:hint="Harga Product"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/black_medium"
                            android:textSize="20sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Deskripsi Product"
                            android:textColorHint="@color/black_medium"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/descEdt"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:gravity="top|start"
                                android:inputType="textMultiLine"
                                android:maxLines="5"
                                android:scrollbars="vertical"
                                android:textColor="@color/black_medium" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dropdownLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Pilih Kategori"
                            android:padding="8dp"
                            android:textColorHint="@color/black_medium"
                            app:boxBackgroundMode="outline"
                            app:endIconMode="dropdown_menu">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/dropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="none"
                                android:paddingStart="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dropdownLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Promo"
                            android:padding="8dp"
                            android:textColorHint="@color/black_medium"
                            app:boxBackgroundMode="outline"
                            app:endIconMode="dropdown_menu">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/dropdownMenu2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="none"
                                android:paddingStart="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/gambarBarangForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="28dp"
                            android:background="@drawable/full_corners_green_medium_bg"
                            android:hint="Gambar Product"
                            android:padding="8dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_medium"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/picItem"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/addProductBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="80dp"
                            android:background="@drawable/full_corners_green_medium_bg"
                            android:text="Submit"
                            android:textColor="@color/red_medium"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </FrameLayout>
        </LinearLayout>

        <!-- SIDEBAR -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu" />
    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>